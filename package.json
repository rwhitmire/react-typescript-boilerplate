{
  "name": "react-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A Webpack boilerplate with hot reloading TypeScript React components, and error handling on module and component level.",
  "scripts": {
    "clean": "rimraf dist",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js",
    "build": "npm run clean && npm run build:webpack",
    "start": "node devServer.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rwhitmire/react-typescript-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "typescript",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack",
    "react-typescript"
  ],
  "author": "Ryan Whitmire <ryanw51@gmail.com> (http://github.com/rwhitmire)",
  "license": "CC0-1.0",
  "devDependencies": {
    "cross-env": "^1.0.6",
    "express": "^4.13.3",
    "react-hot-loader": "^1.3.0",
    "rimraf": "^2.4.3",
    "ts-loader": "^0.8.0",
    "typescript": "^1.7.5",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  },
  "dependencies": {
    "react": "^0.14.3",
    "react-dom": "^0.14.3"
  }
}
